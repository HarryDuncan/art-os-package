{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "target": "ES2015",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "three/examples/*": ["node_modules/three/examples/*"]
    }
  },
  "include": ["src"],
  "exclude": ["src/test-utils/*", "**/*.spec.ts", "**/__tests__", "/dist"]
}
